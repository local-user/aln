#!/bin/bash
#
#   aln
#




    # global(s)
    script_name=$( basename $0 )
    script_verbose=

    # ignore(s)
    ignore_paths[0]='.git/'
    ignore_paths[1]='README.md'
    ignore_paths[2]='INSTALL'


    # | function(s)

        function backup_path {

            # file
            file="$1"

            # ? - file - exists - and - not - symlink
            if [ -e "$file" ] && [ ! -L "$file" ]; then

                # path(s) - backup
                file_backup="$file.`date +%s`.bak"

                # ? - mv - backup - valid
                if mv "$file" "$file_backup"; then
                    log_notice "mv '$file' '$file_backup'"
                else
                    return 1
                fi

            fi

            # return - valid
            return 0

        }

        function create_folder {

            # file
            file="$1"

            # ? - file - not - exists - and - not symlink - and - not directory
            if [ ! -e "$file" ] && [ ! -L "$file" ] && [ ! -d "$file" ]; then

                # path(s) - folder
                folder="`dirname "$file"`"

                # ? - create - folder - valid
                if mkdir -p "$folder"; then
                    log_notice "mkdir -p '$folder'"
                else
                    return 1
                fi

            fi

            # return - valid
            return 0

        }

        function create_symlink {

            # ? - symlink - valid
            if ln -sf "$1" "$2"; then
                log_notice "ln -sf '$1' '$2'"
            else
                return 1
            fi

            # return - valid
            return 0

        }

        function ignore_path {

            # iterate - ignore -paths
            for i in "${ignore_paths[@]}"; do

                # ? - return - invalid
                if [[ "$1" == *"$i"* ]]; then
                    return 1
                fi

            done

            # return - valid
            return 0

        }

        function log_error {
            logger -s -p user.error -t "$script_name" "$@"
        }

        function log_notice {
            logger -s -p user.notice -t "$script_name" "$@"
        }

        function usage {
            echo "$script_name usage: $script_name [-s src/path] [-d dest/path]"
        }

    # function(s) |


    # | main

        # check - arg(s)
        [ $# -eq 0 ] && usage && exit

        # arg(s)
        while getopts ":d:hs:v" FLAG; do
            case "$FLAG" in
                d)  dst="$OPTARG"
                    ;;
                h)  usage
                    exit 2
                    ;;
                s)  src="$OPTARG"
                    ;;
                v)  script_verbose=1
                    ;;
            esac
        done

        # check - path(s)
        [ ! -d "$src" ] && log_error "'$src' not found." && exit 2
        [ ! -d "$dst" ] && log_error "'$dst' not found." && exit 2

        # realpath - path(s)
        src=$( realpath "$src" )
        dst=$( realpath "$dst" )

        # ? - dst - root
        if [[ "$dst" = "/" ]]; then dst=""; fi

        # | aln
        for f in `find "$src" -type f`; do

            # path(s)
            src_file=$( realpath $f )
            dst_file="$dst""/${src_file#$src/}"

            # ? - ignore - path
            if ! ignore_path "$src_file"; then
                continue
            fi

            # create - folder
            create_folder "$dst_file"

            # create - symlink
            create_symlink "$src_file" "$dst_file"

        done
        # aln |

    # main |




#
#   %(#.0)?-
#
