#!/bin/bash
#
#   aln
#




    # global(s)
    script_name=$( basename $0 )
    script_verbose=


    # | function(s)

        function error {
            logger -s -p user.error -t "$script_name" "$@"
        }

        function log {
            logger -s -p user.notice -t "$script_name" "$@"
        }

        function usage {
            echo "$script_name usage: $script_name [-s src/path] [-d dest/path]"
        }

    # function(s) |


    # | main

        # check - arg(s)
        [ $# -eq 0 ] && usage && exit

        # arg(s)
        while getopts ":d:hs:v" FLAG; do
            case "$FLAG" in
                d)  dst="$OPTARG"  # destination
                    ;;
                h)  usage
                    exit 2
                    ;;
                s)  src="$OPTARG"
                    ;;
                v)  script_verbose=1
                    ;;
            esac
        done

        # check - path(s)
        [ ! -d "$src" ] && error "'$src' not found." && exit 2
        [ ! -d "$dst" ] && error "'$dst' not found." && exit 2

        # realpath - path(s)
        src=$( realpath "$src" )
        dst=$( realpath "$dst" )

        # | aln
        for f in `find "$src" ! -wholename *'/.git'* -type f`; do

            # path(s)
            src_file=$( realpath $f )
            dst_file="$dst""/${src_file#$src/}"

            # ? - file - not - exists - and - not symlink
            if [ ! -e "$dst_file" ] && [ ! -L "$dst_file" ]; then

                # path(s) - folder
                dst_folder="`dirname "$dst_file"`"

                # create - folder
                mkdir -p "$dst_folder"
                log "mkdir -p '$dst_folder'"

            fi

            # ? - file - exists - and - not - symlink
            if [ -e "$dst_file" ] && [ ! -L "$dst_file" ]; then

                # path(s) - backup
                dst_file_backup="$dst_file.`date +%s`.bak"

                # mv - backup
                mv "$dst_file" "$dst_file_backup"
                log "mv '$dst_file' '$dst_file_backup'"

            fi

            # symlink - create
            ln -sf "$src_file"  "$dst_file"
            log    "ln -sf '$src_file' '$dst_file'"

        done
        # aln |

    # main |




#
#   %(#.0)?-
#
